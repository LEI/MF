{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}
        	<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Michel Frichet Logo" /></a>
        {{else}}
	        <a class="back-button" href="{{@blog.url}}">Michel Frichet</a>
        {{/if}}
		{{> "nav"}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Décourvrir</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

	<article class="post">
		<blockquote>
			<p>
				Forme, couleur, matière et lumière sont indissociables.
				J'explore les relations entre la ligne et la surface, le fond et la forme, la couleur et la lumière.
				&raquo; <a href="{{@blog.url}}/demarche-artistique">Démarche artistique</a>
			</p>
		</blockquote>
	</article>

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
