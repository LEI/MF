{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination inner">
    {{pagination}}
</div>

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    {{#if image}}
    <figure class="post-image">
        <a class="img" href="{{url}}" style="background-image: url({{image}})"><span class="hidden">Image de {{name}}</span></a>
    </figure>
    {{/if}}
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <footer class="post-meta">
        {{!-- {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="Image de l'auteur" nopin="nopin" />{{/if}}
        {{author}} --}}
    	<span class="icon-link"></span>
        {{tags separator=" "}}
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM YYYY"}}</time>
    </footer>
    <section class="post-excerpt">
        <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}" title="Voir plus">&raquo;</a></p>
    </section>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
